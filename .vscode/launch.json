{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Node.js launch",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "npm",
            "windows": {
                "runtimeExecutable": "npm.cmd"
            },
            "runtimeArgs": [ "run", "debug" ],
            "port": 5858
        },
        {
            "name": "Node.js launch (Docker)",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "docker workspace commit",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "docker-compose",
            "runtimeArgs": [ "run", "--name", "my-express-app", "--service-ports", "--rm", "my-express-app", "npm", "run", "remote-debug" ],
            "port": 5858,
            "localRoot": "${workspaceRoot}",
            "remoteRoot": "/app"
        }
    ]
}
