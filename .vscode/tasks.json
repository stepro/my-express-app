{
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "npm install",
            "isShellCommand": true,
            "command": "npm",
            "suppressTaskName": true,
            "args": [ "install" ]
        },
        {
            "taskName": "npm run watch",
            "dependsOn": "npm install",
            "isShellCommand": true,
            "command": "npm",
            "suppressTaskName": true,
            "args": [ "run", "watch" ],
            "isBackground": true
        },
        {
            "taskName": "npm start",
            "dependsOn": "npm install",
            "isShellCommand": true,
            "command": "npm",
            "suppressTaskName": true,
            "args": [ "start" ],
            "isBackground": true
        },
        {
            "taskName": "docker init",
            "isShellCommand": true,
            "command": "npm",
            "suppressTaskName": true,
            "args": [ "run", "docker-init" ]
        },
        {
            "taskName": "docker build",
            "dependsOn": "docker down",
            "isShellCommand": true,
            "command": "npm",
            "suppressTaskName": true,
            "args": [ "run", "predocker" ]
        },
        {
            "taskName": "docker run watch",
            "dependsOn": "docker down",
            "isShellCommand": true,
            "command": "npm",
            "suppressTaskName": true,
            "args": [ "run", "docker", "watch" ],
            "isBackground": true
        },
        {
            "taskName": "docker run",
            "dependsOn": "docker down",
            "isShellCommand": true,
            "command": "npm",
            "suppressTaskName": true,
            "args": [ "run", "docker", "start" ],
            "isBackground": true
        },
        {
            "taskName": "docker down",
            "command": "docker-compose",
            "suppressTaskName": true,
            "args": [ "down" ]
        }
    ]
}