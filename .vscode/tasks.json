{
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "npm install",
            "isShellCommand": true,
            "command": "npm",
            "suppressTaskName": true,
            "args": [ "install" ]
        },
        {
            "taskName": "npm run watch",
            "isShellCommand": true,
            "command": "npm",
            "suppressTaskName": true,
            "args": [ "run", "watch" ],
            "isBackground": true
        },
        {
            "taskName": "npm start",
            "isShellCommand": true,
            "command": "npm",
            "suppressTaskName": true,
            "args": [ "start" ],
            "isBackground": true
        },
        {
            "taskName": "docker workspace up",
            "command": "docker-compose",
            "suppressTaskName": true,
            "args": [ "-p", "my-express-app_workspace", "-f", "docker-workspace.yml", "up", "--build", "-d" ]
        },
        {
            "taskName": "docker workspace exec npm install",
            "command": "docker",
            "suppressTaskName": true,
            "args": [ "exec", "-i", "my-express-app_workspace", "npm", "install" ]
        },
        {
            "taskName": "docker workspace commit",
            "dependsOn": "docker rmi",
            "command": "docker",
            "suppressTaskName": true,
            "args": [ "commit", "-c", "ENTRYPOINT [\"/sync/exec\"]", "my-express-app_workspace", "my-express-app" ]
        },
        {
            "taskName": "docker workspace run npm run watch",
            "dependsOn": "docker workspace commit",
            "command": "docker-compose",
            "suppressTaskName": true,
            "args": [ "run", "--name", "my-express-app", "--service-ports", "--rm", "my-express-app", "npm", "run", "watch" ],
            "isBackground": true
        },
        {
            "taskName": "docker build",
            "dependsOn": "docker rm",
            "command": "docker-compose",
            "suppressTaskName": true,
            "args": [ "build" ]
        },
        {
            "taskName": "docker run",
            "dependsOn": "docker build",
            "command": "docker-compose",
            "suppressTaskName": true,
            "args": [ "run", "--name", "my-express-app", "--service-ports", "--rm", "my-express-app" ],
            "isBackground": true
        },
        {
            "taskName": "docker rm",
            "isShellCommand": true,
            "command": "docker",
            "suppressTaskName": true,
            "args": [ "rm", "-f", "my-express-app" ],
            "osx": {
                "args": [ "||", "true" ]
            }
        },
        {
            "taskName": "docker rmi",
            "dependsOn": "docker rm",
            "isShellCommand": true,
            "command": "docker",
            "suppressTaskName": true,
            "args": [ "rmi", "my-express-app" ],
            "osx": {
                "args": [ "||", "true" ]
            }
        },
        {
            "taskName": "docker workspace down",
            "dependsOn": "docker rm",
            "command": "docker-compose",
            "suppressTaskName": true,
            "args": [ "-p", "my-express-app_workspace", "-f", "docker-workspace.yml", "down", "-v" ]
        }
    ]
}