{
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "npm install",
            "isShellCommand": true,
            "command": "npm",
            "suppressTaskName": true,
            "args": [ "install" ]
        },
        {
            "taskName": "npm run watch",
            "dependsOn": "npm install",
            "isShellCommand": true,
            "command": "npm",
            "suppressTaskName": true,
            "args": [ "run", "watch" ],
            "isBackground": true
        },
        {
            "taskName": "npm start",
            "dependsOn": "npm install",
            "isShellCommand": true,
            "command": "npm",
            "suppressTaskName": true,
            "args": [ "start" ],
            "isBackground": true
        },
        {
            "taskName": "docker begin",
            "command": "docker-compose",
            "suppressTaskName": true,
            "args": [ "-p", "my-express-app_workspace", "-f", "docker-workspace.yml", "up", "--build", "-d" ]
        },
        {
            "taskName": "docker commit",
            "dependsOn": "docker down",
            "command": "docker",
            "suppressTaskName": true,
            "args": [ "commit", "-c", "ENTRYPOINT [\"/sync/exec\"]", "my-express-app_workspace", "my-express-app" ]
        },
        {
            "taskName": "docker run watch",
            "dependsOn": "docker commit",
            "command": "docker-compose",
            "suppressTaskName": true,
            "args": [ "run", "--service-ports", "--rm", "my-express-app", "npm", "run", "watch" ],
            "isBackground": true
        },
        {
            "taskName": "docker run",
            "dependsOn": "docker commit",
            "command": "docker-compose",
            "suppressTaskName": true,
            "args": [ "run", "--service-ports", "--rm", "my-express-app" ],
            "isBackground": true
        },
        {
            "taskName": "docker down",
            "command": "docker-compose",
            "suppressTaskName": true,
            "args": [ "down" ]
        },
        {
            "taskName": "docker end",
            "dependsOn": "docker down",
            "command": "docker-compose",
            "suppressTaskName": true,
            "args": [ "-p", "my-express-app_workspace", "-f", "docker-workspace.yml", "down", "-v" ]
        }
    ]
}