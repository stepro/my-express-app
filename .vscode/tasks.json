{
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "npm install",
            "suppressTaskName": true,
            "isShellCommand": true,
            "command": "npm",
            "args": [ "install" ]
        },
        {
            "taskName": "npm run watch",
            "suppressTaskName": true,
            "isShellCommand": true,
            "command": "npm",
            "args": [ "run", "watch" ],
            "isBackground": true
        },
        {
            "taskName": "docker-compose build",
            "dependsOn": "docker-compose down",
            "suppressTaskName": true,
            "command": "docker-compose",
            "args": [ "build" ]
        },
        {
            "taskName": "docker-compose up",
            "suppressTaskName": true,
            "command": "docker-compose",
            "args": [ "up", "--build" ],
            "isBackground": true
        },
        {
            "taskName": "docker-compose down",
            "suppressTaskName": true,
            "command": "docker-compose",
            "args": [ "down" ]
        }
    ]
}