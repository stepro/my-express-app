{
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "npm install",
            "isShellCommand": true,
            "command": "npm",
            "suppressTaskName": true,
            "args": [ "install" ]
        },
        {
            "taskName": "npm run watch",
            "dependsOn": "npm install",
            "isShellCommand": true,
            "command": "npm",
            "suppressTaskName": true,
            "args": [ "run", "watch" ],
            "isBackground": true
        },
        {
            "taskName": "npm start",
            "dependsOn": "npm install",
            "isShellCommand": true,
            "command": "npm",
            "suppressTaskName": true,
            "args": [ "start" ],
            "isBackground": true
        },
        {
            "taskName": "docker loop start",
            "dependsOn": "docker loop end",
            "command": "docker-loop",
            "suppressTaskName": true,
            "args": [ "start", "my-express-app" ]
        },
        {
            "taskName": "docker workspace up",
            "dependsOn": "docker workspace build",
            "command": "docker-compose",
            "suppressTaskName": true,
            "args": [ "-f", "docker-workspace.yml", "run", "--name", "my-express-app_workspace", "-d", "my-express-app" ]
        },
        {
            "taskName": "docker workspace commit",
            "dependsOn": "docker rmi",
            "command": "docker",
            "suppressTaskName": true,
            "args": [ "commit", "-c", "ENTRYPOINT [\"/sync/exec\"]", "my-express-app_workspace", "my-express-app" ]
        },
        {
            "taskName": "docker workspace run npm run watch",
            "dependsOn": "docker workspace commit",
            "command": "docker-compose",
            "suppressTaskName": true,
            "args": [ "run", "--name", "my-express-app", "--service-ports", "--rm", "my-express-app", "npm", "run", "watch" ],
            "isBackground": true
        },
        {
            "taskName": "docker build",
            "dependsOn": "docker rm",
            "command": "docker-compose",
            "suppressTaskName": true,
            "args": [ "build" ]
        },
        {
            "taskName": "docker run",
            "dependsOn": "docker build",
            "command": "docker-compose",
            "suppressTaskName": true,
            "args": [ "run", "--name", "my-express-app", "--service-ports", "--rm", "my-express-app" ],
            "isBackground": true
        },
        {
            "taskName": "docker rm",
            "isShellCommand": true,
            "command": "docker",
            "suppressTaskName": true,
            "args": [ "rm", "-f", "my-express-app" ],
            "osx": {
                "args": [ "||", "true" ]
            }
        },
        {
            "taskName": "docker down",
            "command": "docker-compose",
            "suppressTaskName": true,
            "args": [ "down", "-v" ]
        },
        {
            "taskName": "docker loop end",
            "command": "docker-loop.cmd",
            "suppressTaskName": true,
            "args": [ "end" ]
        }
    ]
}